@model IEnumerable<GestaoDoConecimento.Dados.Problema>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Atividade.NomeAtividade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeProblema)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Atividade.NomeAtividade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeProblema)
            @Html.ActionLink(item.NomeProblema.ToString(), "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
    </tr>
}

</table>
